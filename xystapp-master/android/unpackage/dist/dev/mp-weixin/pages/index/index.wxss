/* 关注用户区域 */
.follow-users-section.data-v-1cf27b2a {
	padding: 20rpx;
	background: #FFFFFF;
	border-radius: 20rpx;
	margin: 20rpx;
}
.follow-users-swiper.data-v-1cf27b2a {
	height: 300rpx;
	width: 100%;
	overflow: visible;
}
.follow-users-swiper swiper-item.data-v-1cf27b2a {
	overflow: visible;
}
.user-item.data-v-1cf27b2a {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100%;
	position: relative;
	transition: all 0.3s ease;
}

/* 最中间的图片 - 最清晰 */
.user-item.center.data-v-1cf27b2a {
	transform: scale(1.2);
	opacity: 1;
	filter: blur(0px);
}

/* 靠近中间的图片 - 稍微模糊 */
.user-item.near.data-v-1cf27b2a {
	transform: scale(1.0);
	opacity: 0.8;
	filter: blur(1px);
}

/* 较远的图片 - 更模糊 */
.user-item.far.data-v-1cf27b2a {
	transform: scale(0.8);
	opacity: 0.6;
	filter: blur(2px);
}

/* 最远的图片 - 最模糊 */
.user-item.farthest.data-v-1cf27b2a {
	transform: scale(0.6);
	opacity: 0.3;
	filter: blur(4px);
}
