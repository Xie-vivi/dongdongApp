/* 互动区域 */
.post-actions.data-v-1cf27b2a {
	border-top: 2rpx solid #E6D9F9; /* 1px * 2 */
	height: 100rpx; /* 50px * 2 */
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.action-item.data-v-1cf27b2a {
	display: flex;
	align-items: center;
	gap: 12rpx;
}
.heart-icon.data-v-1cf27b2a, .star-icon.data-v-1cf27b2a, .comment-icon.data-v-1cf27b2a {
	width: 48rpx; /* 24px * 2 */
	height: 48rpx;
	position: relative;
}
.heart-icon.data-v-1cf27b2a::before {
	content: '';
	position: absolute;
	width: 38rpx; /* 19px * 2 */
	height: 32rpx; /* 16px * 2 */
	left: 5rpx;
	top: 8rpx;
	border: 4rpx solid #8A70C9; /* 2px * 2 */
	border-radius: 20rpx 20rpx 0 0;
	transform: rotate(-45deg);
}
.heart-icon.data-v-1cf27b2a::after {
	content: '';
	position: absolute;
	width: 38rpx;
	height: 32rpx;
	right: 5rpx;
	top: 8rpx;
	border: 4rpx solid #8A70C9;
	border-radius: 20rpx 20rpx 0 0;
	transform: rotate(45deg);
}
.heart-icon.liked.data-v-1cf27b2a::before,
.heart-icon.liked.data-v-1cf27b2a::after {
	background: #8A70C9;
}
.star-icon.data-v-1cf27b2a::before {
	content: '★';
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	font-size: 32rpx; /* 16px * 2 */
	color: #8A70C9;
}
.star-icon.starred.data-v-1cf27b2a::before {
	color: #FFD700;
}
.comment-icon.data-v-1cf27b2a::before {
	content: '';
	position: absolute;
	width: 32rpx; /* 16px * 2 */
	height: 24rpx; /* 12px * 2 */
	left: 8rpx;
	top: 8rpx;
	border: 4rpx solid #8A70C9; /* 2px * 2 */
	border-radius: 8rpx;
}
.comment-icon.data-v-1cf27b2a::after {
	content: '';
	position: absolute;
	width: 0;
	height: 0;
	left: 12rpx;
	bottom: 8rpx;
	border-left: 8rpx solid transparent;
	border-right: 8rpx solid transparent;
	border-top: 12rpx solid #8A70C9;
}
.action-count.data-v-1cf27b2a {
