
.login-container.data-v-e4e4508d {
	position: relative;
	width: 100vw;
	height: 100vh;
	background: #FFFFFF;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	overflow: hidden;
}

/* Logo区域 */
.logo-section.data-v-e4e4508d {
	margin-top: 80rpx;
	margin-bottom: 60rpx;
	width: 250rpx;
	height: 226rpx;
}
.logo.data-v-e4e4508d {
	width: 100%;
	height: 100%;
}

/* 品牌标题区域 */
.brand-section.data-v-e4e4508d {
	margin-bottom: 80rpx;
	text-align: center;
}
.brand-title.data-v-e4e4508d {
	font-family: 'Inter', sans-serif;
	font-style: normal;
	font-weight: 700;
	font-size: 64rpx; /* 32px * 2 */
	line-height: 78rpx; /* 39px * 2 */
	color: #000000;
	display: block;
	margin-bottom: 4rpx;
}
.brand-desc.data-v-e4e4508d {
	font-family: 'Inter', sans-serif;
	font-style: normal;
	font-weight: 400;
	font-size: 32rpx; /* 16px * 2 */
	line-height: 38rpx; /* 19px * 2 */
	color: #757575;
	display: block;
}

/* 登录卡片 */
.login-card.data-v-e4e4508d {
	position: relative;
	width: 700rpx;
	height: 440rpx;
	background: #FFFFFF;
	box-shadow: 0px 4rpx 20rpx rgba(193, 184, 232, 0.5);
	border-radius: 20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 0;
	margin-bottom: 60rpx;
}

/* 登录按钮 */
.login-btn.data-v-e4e4508d {
	width: 620rpx;
	height: 80rpx;
	border-radius: 20rpx;
	border: none;
	font-family: 'Alibaba PuHuiTi', sans-serif;
	font-style: normal;
	font-weight: 400;
	font-size: 32rpx;
	line-height: 44rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: all 0.3s ease;
	margin: 30rpx 0;
}

/* 本机号码一键登录按钮 */
.primary-btn.data-v-e4e4508d {
	background: #8A70C9;
	color: #FFFFFF;
}

/* 手机验证码登录按钮和注册账号按钮 */
.secondary-btn.data-v-e4e4508d {
	background: #FFFFFF;
	border: 2rpx solid #BCA8F0;
	color: #333333;
}
.login-btn.data-v-e4e4508d:active {
	transform: scale(0.98);
	opacity: 0.8;
}

/* 第三方登录区域 */
.third-party-section.data-v-e4e4508d {
	position: relative;
	width: 700rpx;
}

/* 分割线区域 */
.divider-section.data-v-e4e4508d {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 54rpx;
	width: 100%;
}

/* 分割线 */
.divider-line.data-v-e4e4508d {
	width: 210rpx;
	height: 2rpx;
	background: #757575;
}
.divider-text.data-v-e4e4508d {
	font-family: 'Inter', sans-serif;
	font-style: normal;
	font-weight: 400;
	font-size: 24rpx;
	line-height: 30rpx;
	color: #757575;
	background: #FFFFFF;
	padding: 0 20rpx;
	text-align: center;
}

/* 社交登录按钮 */
.social-login.data-v-e4e4508d {
	position: relative;
	width: 100%;
	height: 70rpx;
	display: flex;
	justify-content: center;
	gap: 100rpx;
	align-items: center;
}

/* 社交登录按钮 */
.social-btn.data-v-e4e4508d {
	width: 70rpx;
	height: 70rpx;
	border-radius: 50%;
	background: #FFFFFF;
	cursor: pointer;
	transition: all 0.3s ease;
}
.social-btn.data-v-e4e4508d:active {
	transform: scale(0.9);
}
.social-icon.data-v-e4e4508d {
	width: 70rpx;
	height: 70rpx;
}

/* 加载状态 */
.login-btn.loading.data-v-e4e4508d {
	opacity: 0.6;
	pointer-events: none;
}
.login-btn.loading.data-v-e4e4508d::after {
	content: '';
	width: 20rpx;
	height: 20rpx;
	border: 2rpx solid transparent;
	border-top: 2rpx solid currentColor;
	border-radius: 50%;
	animation: spin-e4e4508d 1s linear infinite;
	margin-left: 10rpx;
}
@keyframes spin-e4e4508d {
0% { transform: rotate(0deg);
}
100% { transform: rotate(360deg);
}
}
